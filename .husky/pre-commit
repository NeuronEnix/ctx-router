pnpm lint-staged
LINT_STATUS=$?
if [ $LINT_STATUS -ne 0 ]; then
  echo "Lint failed. Commit aborted."
  exit 1
fi

pnpm build
BUILD_STATUS=$?
if [ $BUILD_STATUS -ne 0 ]; then
  echo "Build failed. Commit aborted."
  exit 1
fi

pnpm test
TEST_STATUS=$?
if [ $TEST_STATUS -ne 0 ]; then
  echo "Tests failed. Commit aborted."
  exit 1
fi
